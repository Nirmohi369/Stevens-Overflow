{{!-- {{#if comments}}

<div class="pageWrapper flex flex-row flex-nowrap bg-inherit">
    <div class="leftWrapper basis-1/5 border-2">1</div>
    <div class="commentsWrapper basis-3/5">
        <div class="flex flex-row py-4 border-b-2">
            <div class="basis-4/5">
                <h1 class="my-4 mx-8 text-4xl font-bold">{{title}}</h1>
            </div>
            <div class="basis-1/5"><button class="rounded-lg px-2 py-2 my-4 bg-sky-600 text-white hover:bg-sky-700"
                    value="Add Comment"><a href="/comments/comment">Add Comment</a></button></div>
        </div>

        {{#each comments}}
        <div class="commentWrapper1 flex flex-row border-b-2 px-2">
            <div class="commentStats my-4 mx-8 whitespace-normal basis-1/3">
                <h4 class="pl-5 text-sm text-normal"><span class="ml-6">{{likes}} votes</span></h4>
                <!-- Add other comment-related statistics if available -->
            </div>
            <div class="comment basis-2/3 my-4 h-auto whitespace-normal">
