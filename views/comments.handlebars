                <p class="text-slate-500 py-6 my-2 text-ellipsis overflow-hidden max-h-36">{{commentText}}</p>
                <!-- Display other relevant comment information here -->
            </div>
        </div>
        {{/each}}
    </div>
    <div class="rightWrapper basis-1/5 border-2">3</div>
</div>
{{else}}
<h1>{{title}}</h1>
<div class="error">
    <h3>{{message}}</h3>
</div>
{{/if}} --}}